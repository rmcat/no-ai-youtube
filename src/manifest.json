{
  "manifest_version": 3,
  "name": "Auto-close YouTube AI Videos",
  "version": "1.0",
  "description": "Automatically close YouTube videos that contain altered or synthetic content.",
  "permissions": ["tabs"],
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  }
}
